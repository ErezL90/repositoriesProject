@using Repositories.Models

@{
    ViewBag.Title = "MyRepositories";
}

@{ var items = (List<Items>)Session["itemsArray"];

    <div class="center text-success">
        <h1>My Repositories</h1>
    </div>



    if (items != null)
    {
        <div class="row" ng-controller="homeController">

            @foreach (var item in items)
            {
                <div class="col-xl-2 col-lg-2 col-md-3 col-xs-6 thumb">
                    <div class="card">
                        <img src="@item.Owner.Avatar_url" class="card-img-top" alt="@item.Name">
                        <div class="card-body">
                            <h6 class="card-title">@item.Name</h6>
                        </div>
                    </div>
                </div>}

        </div> }
    else
    {
        <div class="alert alert-danger" role="alert">
            Sorry, No items in the cart yet!
        </div>

    } }

